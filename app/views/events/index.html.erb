<% if @events.any? %>
  <% @events.each do |event|%>

<div class="panel col s12 m6 l4">
  <div class="card blue-grey lighten-5">
    
  
  <div class="card-content ">
    <span class="card-title">
    <%= link_to event.title, event_path(event)%>
    </span> 
    <table>
      <tbody>
        <tr>
          <th>Where?</th>
          <td><%= event.location %></td>
        </tr>
        <tr>
          <th>When?</th>
          <td><%= event.date %></td>
        </tr>
        <tr>
          <th>What?</th>
          <td><%= event.description %></td>
        </tr>
        <tr>
          <th>How many?</th>
          <td><%= event.size %></td>
        </tr>
        <tr>
          <th>How much?</th>
          <td>....Price....</td>
        </tr>
      </tbody>
    </table>
    <div>
    <%= link_to "Edit #{event.title}", edit_event_path(event) %>
    <%= link_to "Delete #{event.title}", event_path(event), method: :delete %>
    </div>
    
  </div>
    <div class="card-action">
      <a href="#">APPLY</a>
    </div>
  </div>
</div>
  <% end %>
<% else %>
  <p> No events yet </p>
<% end %>
