<div class="row">
    <div class="toc-wrapper teal lighten-4 col s12 m3">
      <ul class="section table-of-contents">
        <li><a href="#what">What?</a></li>
        <li><a href="#when">When?</a></li>
        <li><a href="#where">Where?</a></li>
        <li><a href="#who">Who + How Many?</a></li>
        <li><a href="#publish">Publish</a></li>
      </ul>
  </div>

  <div class="col s12 m6 offset-m3">
    <div id="what" class="form-group section scrollspy">
    <%= form_for @event do |f| %>
      <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control'%>
      <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control'%>






    <div  id="when" class="section scrollspy col s12">
      <h3>When</h3>
        <%= f.label :date %>
        <%= f.text_field :date, class: 'form-control' %>
    </div>

    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true&libraries=places"></script>
    
    <div id="where" class="section scrollspy col s12">
      <h3>Where</h3>
      <div class="input-group">
        <div id="locationField">
          <%= f.label :location %>
          <%= f.text_field :location, class: 'form-control', id: "autocomplete", placeholder: "Enter your address" %>
        </div>

        <%= f.label :housenumber, "House Number" %>
          <%= f.text_field :housenumber, class: 'form-control', id: "street_number" %> 
        <%= f.label :street %>
          <%= f.text_field :street, class: 'form-control', id: "route" %>
        <%= f.label :city %>
          <%= f.text_field :city, class: 'form-control', id: "locality" %>     
        <%= f.label :postcode %>
          <%= f.text_field :postcode, class: 'form-control', id: "postal_code" %>
        <%= f.label :country %>
          <%= f.text_field :country, class: 'form-control', id: "country" %>
      </div>
    </div>

    <div  id="who" class="section scrollspy col s12">
      <h3>Who and how many</h3>
        <%= f.label :size %>
        <%= f.text_field :size, class: 'form-control' %>
    </div>

    <div  id="publish" class="section scrollspy col s12">
      <h3>Publish</h3>
    <%= f.submit 'Create Event', :class => 'btn btn-primary'%>
    <% end %>
    </div>
    </div>
  </div>
</div>