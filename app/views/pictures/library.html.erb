<div class="container">
<h4>Select an image to add to <%= @event.title %></h4>
<blockquote>
  Please make sure, your image is wider than high. It will look much better on the frontpage.
</blockquote>

<ul>
  <% if @pictures.any? %>
    <% @pictures.each do |picture|%>
      <li><%= image_tag picture.image.url(:thumb) %>
       <%= link_to "Add #{picture.title}", new_eventpicture_path({"event_id" =>"#{@event.id}","picture_id"=>"#{picture.id}"}) %>
      </li>
    <% end %>
    <li><%= link_to "Upload Pictures", pictures_path %></li>
  <% else %>
    <li><p>No pictures available to add to event</p></li>
   <!--  <li><%= link_to "Upload Pictures", pictures_path %></li> -->
  <% end %>
</ul>
<%= form_for @picture, html: {multipart: true} do |f| %>
      <%= f.label :image %>
      <%= f.file_field :image %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.submit %>
    <% end %>
</div>