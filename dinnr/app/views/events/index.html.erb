<% if @events.any? %>
  <% @events.each do |event|%>
    <h3><%= link_to event.title, event_path(event)%></h3>
    <%= link_to "Edit #{event.title}", edit_event_path(event) %>
    <%= link_to "Delete #{event.title}", event_path(event), method: :delete %>
    <p> <%= event.location %></p>
  <% end %>
<% else %>
 <p> No events yet </p>
<% end %>

<a href="events/new">Add an event</a>