<% if @events.any? %>
  <% @events.each do |event|%>

<div class="col-md-4">
<div class="panel panel-default">
  <div class="card-panel teal lighten-5">
    <h3 class="panel-title"><%= link_to event.title, event_path(event)%></h3>
  </div>
  <div class="panel-body">
    <p><%= event.description %></p>
    <p><%= event.location %></p>
    <p><%= event.date %></p>
    <p><%= event.size %></p>
    <p><%= event.guests %></p>
    <p> <%= event.location %></p>
  </div>
  </div>
  </div>
  <% end %>
<% else %>
  <p> No events yet </p>
<% end %>

<a href="events/new">Add an event</a>